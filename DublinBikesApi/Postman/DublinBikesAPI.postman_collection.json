			"item": [
				{
					"name": "Get All Stations",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Response has data property\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('data');",
									"});",
									"",
									"pm.test(\"Response has pagination properties\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('page');",
									"    pm.expect(jsonData).to.have.property('pageSize');",
									"    pm.expect(jsonData).to.have.property('totalCount');",
									"    pm.expect(jsonData).to.have.property('totalPages');",
									"});",
									"",
									"pm.test(\"Data is an array\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.data).to.be.an('array');",
									"});",
									"",
									"pm.test(\"Stations have required fields\", function () {",
									"    var jsonData = pm.response.json();",
									"    if (jsonData.data.length > 0) {",
									"        var station = jsonData.data[0];",
									"        pm.expect(station).to.have.property('number');",
									"        pm.expect(station).to.have.property('name');",
									"        pm.expect(station).to.have.property('address');",
									"        pm.expect(station).to.have.property('latitude');",
									"        pm.expect(station).to.have.property('longitude');",
									"        pm.expect(station).to.have.property('bikeStands');",
									"        pm.expect(station).to.have.property('availableBikes');",
									"        pm.expect(station).to.have.property('status');",
									"        pm.expect(station).to.have.property('occupancy');",
									"    }",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
